<div class="col-sm-10 col-sm-offset-1">

<p id="notice"><%= notice %></p>

<h1>Work <span class="header-link"> &#62; <%= link_to 'Add more work',  new_client_work_path %></span></h1>

<br>
<br>
Time unbilled:<br>
Time billed: <%# total_billed %>
<br>
<br>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Time</th>
      <th>Title & Description</th>
      <th><span class="billed-yet">Billed?</span></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr class="<%= work.faded %>">
        <td class="hours"> <span class="hours-text"><%= work.time_elapsed %></span><br><%= 'hour'.pluralize %> </td>
        <td>
          <h3><%= link_to 'work.title', [work.client, work] %></h3>
          <%= work.description %>
        </td>
        <td class="dollars"><%= work.money_dollars %></td>
        <!--<td><%# link_to 'Show', [work.client, work] %></td>-->
        <td class="actions"> &#62;<%= link_to 'Edit', edit_client_work_path(work.client, work) %> <br>
       &#62;<%= link_to 'Destroy', [work.client, work], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= will_paginate (@works), renderer: BootstrapPagination::Rails %>

</div>