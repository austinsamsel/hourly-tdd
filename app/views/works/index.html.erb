<p id="notice"><%= notice %></p>

<h1>Work</h1>

<%= link_to 'Add more work',  new_client_work_path %>
<br>
<br>
Time unbilled:<br>
Time billed:
<br>
<br>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Time</th>
      <th>Title & Description</th>
      <th>Billed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><strong>start:</strong> <%= work.start_time.strftime("%m/%d/%Y @ %I:%M%p") %><br>
        <strong>end:</strong> <%= work.end_time.strftime("%m/%d/%Y @ %I:%M%p") %></td>
        <td>
          <h3 style="margin-top:0;"><%= work.title %></h3>
          <%= work.description %>
        </td>
        <td><%= work.billed %></td>
        <!--<td><%# link_to 'Show', [work.client, work] %></td>-->
        <td><%= link_to 'Edit', edit_client_work_path(work.client, work) %></td>
        <td><%= link_to 'Destroy', [work.client, work], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
